- require 'rss/2.0'

- open('app/views/twitter/twitter.rss') do |file|
  - response = file.read
  - result = RSS::Parser.parse(response, false)
  %h2.twitter Twitter
  
  - if result.items.size > 0 
    - result.items.each_with_index do |item, i|
      .tweet
        %p.text
          - author = item.author.slice(/^\w+/)
          != link_to(author, "http://twitter.com/#{author}", { :class => "author" }) + ": "
          != tweet_to_html(item.title)
        %p.meta
          %span.dim den
          = l(item.pubDate, :format => "%e %B").humanize
          %span.dim klockan
          = l item.pubDate, :format => "%H:%M"
  - else
