- require 'rss/2.0'

.twitter
  %h2 Twitter
  
  - items = get_items  
  - if items.size > 0 
    - items.each do |item|
      .tweet
        %p.text
          - author = get_author item.author
          != link_to(author, "http://twitter.com/#{author}", { :class => "author" }) + ": "
          != tweet_to_html(item.title)
        %p.meta
          %span.dim den
          = l(item.pubDate, :format => "%e %B").humanize
          %span.dim klockan
          = l item.pubDate, :format => "%H:%M"
