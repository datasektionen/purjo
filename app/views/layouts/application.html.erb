<!DOCTYPE html>
<html>
<head>
  <link href="/stylesheets/print.css" type="text/css" rel="stylesheet" media="print" />
  <link rel="alternate" href="http://www.d.kth.se/nyheter.rss" type="application/rss+xml" title="www.d.kth.se - Nyheter" />

  <%-
    # NOTE: Fick felmedelanden när :defaults OCH protoculous-effects-shrinkvars var laddad.
    # Det ser ut som att protoculous-effects-shrinkvars är samma fil som effects.js som
    # :default redan laddar.
  %>
  
  <%= javascript_include_tag :defaults, 'textboxlist', 'multiselect', :cache => true %>
  
  <%= yield :head %>
  
  <%= stylesheet_link_tag 'main', 'multiselect', 'form', :cache => true %>
  
  <%= csrf_meta_tag %>
  
  <title>
    <%= title %> – Konglig Datasektionen
  </title>
  
  <!--[if IE]> <style> #related_container { margin-right: 0; } </style> <![endif]-->
  
  <!-- to correct the unsightly Flash of Unstyled Content. http://www.bluerobot.com/web/css/fouc.asp -->
  <script type="text/javascript"></script>
</head>
<body>

  <h1 id="header_container">
    <a href="/" title="Konglig Datasektionen">
      <span>Konglig Datasektionen</span>
    </a>
  </h1>

  <div id="title_container">
    <ul class="horizontal">
      <li>
        <a href="/" title="Gå till Startsidan (Alt + h)" accesskey="h">
          <span class="accesskey">H</span>em
        </a>
      </li>

      <% if Person.current.is_a? AnonymousPerson %>
        <li><%= link_to 'Logga in', new_sessions_path(:return_url => current_url) %></li>
      <% else %>
        <li style="color: white;">
          <%= Person.current %>
          (<%= link_to 'Logga ut', sessions_path(:return_url => current_url), :method => :delete %>)
        </li>
      <% end %>
      <li class="right">
        <a href="/sektionen/namnder/diu/">
          <img src="/images/eng.gif" alt="English" id="englishflag"/>
        </a>
      </li>
    </ul>
  </div>

  <div id="content_container">
    
    <% if flash[:notice] %>
      <div id="flash_notice">&raquo; <%= flash[:notice]%></div>
    <% end %>
    
    <%= yield %>
    
    <ul class="horizontal" id="content_footer">
      <li><a href="http://validator.w3.org/check/referer">Xhtml</a></li>
      <li><a href="http://jigsaw.w3.org/css-validator/check/referer">Css</a></li>
      <li><a href="http://bobby.watchfire.com/bobby/bobbyServlet?URL=<%= request.url %>&amp;output=Submit&amp;gl=wcag1-aaa&amp;test=">Aaa</a></li>
      <li class="last"><a href="http://www.nada.kth.se/dataterm/">Datatermer</a></li>
    </ul>
  </div>

  <div id="related_container">
    <% if false -%>
    <% for news_item in news -%>
    
    <h3>
      <a href="<%= news_item.link %>">
        <%= news_item.title %>
      </a>
    </h3>
    <p>
    <%= truncate_at_word news_item.description, 100 %>
    </p>
    
    <ul class="horizontal">
      <li class=""><a href="/nyheter?avd=<%= news_item.category unless news_item.category.nil? %>"><%= news_item.category unless news_item.category.nil? %></a></li>
      <li class="last"><%= news_item.pubDate.strftime("%d %b").sub("Oct", "Okt").sub("May", "Maj") %></li>
    </ul>
    
    <% end -%>
    <% end -%>
  </div>
      
  <div id="menu_container">
    <h2><span>Innehåll</span></h2>
    <%
      menu do |menu|
        menu.section("Aktuellt", "aktuellt") do |section|
          section.menu_item("Nyheter", "/nyheter")
          section.menu_item("Kalender", "/kalender")
          section.menu_item("Dagens lunch", "/lunch")
        end
        
        menu.section("Sektionen", "sektionen") do |sektionen|
          sektionen.section("Formalia", "formalia") do |formalia|
            formalia.menu_item("Årskursnamn", "arskursnamn")
            formalia.menu_item("Hedersdeltat", "hedersdelta")
            formalia.menu_item("Hedersmedlem", "hedersmedlem")
            formalia.menu_item("Grafisk profil", "grafiskprofil")
            formalia.menu_item("Protokoll", "protokoll")
            formalia.menu_item("Stadgar", "stadgar")
            formalia.menu_item("Reglemente", "reglemente")
            formalia.menu_item("Verksamhetsplan", "verksamhetsplan")
            formalia.menu_item("Alkoholpolicy", "alkoholpolicy")
            formalia.menu_item("Ekonomi", "ekonomiskt_styrdokument")
          end
          
          sektionen.section("Nämnder", "namnder") do |namnder|
            namnder.menu_item("Dataspelet", 'dataspelet')
            namnder.menu_item("dBuggen", 'dbuggen')
            namnder.menu_item("DIU", 'diu')
            namnder.menu_item("DKM", 'dkm')
            namnder.menu_item("ESCapo", 'escapo')
            namnder.menu_item("IOR", 'ior')
            namnder.menu_item("Jämlikhetsnämnden", 'jamlikhetsnamnden')
            namnder.menu_item("Mottagningen", 'mottagningen')
            namnder.menu_item("Näringslivsgruppen", 'naringsliv')
            namnder.menu_item("Prylmånglare", 'prylmanglaren')
            namnder.menu_item("Qulturnämnden", 'qn')
            namnder.menu_item("SIL - Idrott", 'idrottsnamnden')
            namnder.menu_item("Studienämnden", 'studienamnden')
          end
          
          sektionen.section("Studieresan", "studs") do |studieresan|
            studieresan.menu_item("Logga in", "login")
          end
          
          sektionen.menu_item("Alumni", "alumni")
          sektionen.menu_item("Kontakt", "kontakt")
          sektionen.menu_item("Ordnar", "ordnar")
          sektionen.menu_item("Sektionsfunktionärer", 'funktionarer')
          sektionen.menu_item("SSO", 'sso')
          sektionen.menu_item("Styrelse", 'drektoratet')
          sektionen.menu_item("Sök Teknolog", "sok")
          sektionen.menu_item("Valberedningen", "val")
        end
        
        menu.section("Studier", 'studier') do |studier|
          studier.section("Datorsupport", "datorsupport") do |datorsupport|
            datorsupport.menu_item("Systemgruppen NADA", "http://www.sgr.nada.kth.se/")
          end
          studier.menu_item("Kurser", "kurser")
          studier.menu_item("Mina Sidor", "https://www.kth.se/student/minasidor/index.jsp")
          studier.menu_item("Schema", 'schema')
          studier.menu_item("Studentwebben", 'http://www.kth.se/student/?rs=true&l=sv_SE&programme=d')
          studier.menu_item("Vägledning", 'http://www.d.kth.se/studier/vagledning/')
          studier.menu_item("Webbpost", "https://webmail.kth.se/")
          #studier.menu_item("WebDatan", "http://www.f.kth.se/~f00-ale/webdatan/")
        end
        
        menu.section("Studentliv", 'studentliv') do |studentliv|
          studentliv.menu_item("Mottagningen", '/sektionen/namnder/mottagningen')
          studentliv.menu_item("Sektioner", 'sektioner')
        end
      end
    %>
  </div>
      
  <% unless Person.current.is_a? AnonymousPerson %>
    <div id="admin_box">
      
      <% if Person.current.editor? %>
      <div id="admin_links">
        <% if @posts or @news_posts %>
          <%= admin_link('Ny nyhet-/kalender-post', :url => new_post_path, :icon => 'date_add.png') %>
        <% end %>

        <% if @functionaries %>
          <%= admin_link('Nytt funktionärsmandat', :url => new_functionary_path, :icon => 'functionary_add.png') %>
          <%= admin_link('Ny funktionärspost', :url => new_chapter_post_path, :icon => 'functionary_add.png') %>
          <%= admin_link('Redigera funktionärsposter', :url => chapter_posts_path, :icon => 'chapter_post_edit.png') %>
        <% end %>

        <% if @chapter_posts %>
          <%= admin_link('Ny funktionärspost', :url => new_chapter_post_path, :icon => 'functionary_add.png') %>
        <% end %>
        
        <% if @newsletter && !@newsletter.new_record? && Person.current.admin? %>
          <%= admin_link('Skicka nyhetsbrev', :url => new_newsletter_live_delivery_path(@newsletter)) %>
          <%= admin_link('Testskicka nyhetsbrev', :url => new_newsletter_test_delivery_path(@newsletter)) %>
        <% end %>

        <% if @nominees %>
          <%= admin_link('Ny nominering', :url => new_nominee_path, :icon => 'functionary_add.png') %>
          <%= admin_link('Valtillfällen', :url => { :controller => 'election_events' }, :icon => 'event_edit.png') %>
        <% end %>

        <% if @election_events %>
          <%= admin_link('Nytt val', :url => new_election_event_path, :icon => 'election_add.png') %>
        <% end %>

        <% if !@node.nil? && !@node.new_record? %>
          <%= admin_link('Ny undersida', :url => new_text_node_child_path(@node), :icon => 'page_add.png') %>
          <%= admin_link('Ny fil', :url => new_text_node_file_path(@node), :icon => "page_attach.png") %>
          <%= admin_link('Redigera sida', :url => edit_text_node_path(@node), :icon => "page_edit.png") %>
          <% if @node.children.empty? -%>
            <%= admin_link('Ta bort sida', :icon => "page_delete.png", :url => text_node_path(@node), :method => :delete, :confirm => "Detta kommer ta bort noden #{@node.url}(#{@node.name}). Är du säker på att detta verkligen är det du vill?") %>
          <% end -%>
          
          <%= admin_link("Lista subnoder", :url => text_node_children_path(@node), :icon => 'page_go.png') %>
          <%= admin_link("Lista filer", :url => text_node_files_path(@node), :icon => 'attach.png') %>
          <%= admin_link("Historia", :url => text_node_versions_path(@node), :icon => 'page_gear.png') %>
          
        <% end %>
        <%= admin_link("Alla noder", :url => text_node_children_path(Node.find_by_url("/")), :icon => 'nodes.png' ) %>
      </div>
      <a href="#" onclick="Element.toggle('admin_links'); this.innerHTML = ($('admin_links').style.display == 'none')?'&laquo;':'&raquo;'">&raquo;</a>
      
      <% end -%>
    </div>
  <% end -%>
    <script type="text/javascript">
    var gaJsHost = (("https:" == document.location.protocol) ? "https://ssl." : "http://www.");
    document.write(unescape("%3Cscript src='" + gaJsHost + "google-analytics.com/ga.js' type='text/javascript'%3E%3C/script%3E"));
    </script>
    <script type="text/javascript">
    try {
    var pageTracker = _gat._getTracker("UA-7158121-2");
    pageTracker._trackPageview();
    } catch(err) {}</script>
  </body>
</html>

