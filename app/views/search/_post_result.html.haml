%h3
  = link_to result.name, post_path(result)  
  %span.type (Nyhet)

%p.meta.date
  %span Publicerad den 
  = l result.created_at, :format => "%e %b %Y"
  %span klockan 
  = l result.created_at, :format => "%H:%M"

- if result.calendar_post?
  %p.meta.duration
    %span Pågår från 
    = l result.starts_at, :format => "%Y-%m-%d %H:%M"
    %span till 
    = l result.ends_at, :format => "%Y-%m-%d %H:%M"
  
  
